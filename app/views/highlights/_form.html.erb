<%= form_with(model: highlight, local: true) do |form| %>
  <% if highlight.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(highlight.errors.count, "error") %> prohibited this highlight from being saved:</h2>

      <ul>
      <% highlight.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :highlight_title %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image, id: :highlight_image %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :highlight_description %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.text_field :date, id: :highlight_date %>
  </div>

  <div class="field">
    <%= form.label :place %>
    <%= form.text_field :place, id: :highlight_place %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
