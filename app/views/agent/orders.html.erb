<h1>Generate registration number for user:</h1>
<%= form_tag("orders", method: "get") do %>
  <%= label_tag(:q, "Generate registration number for user:",class:"form-control")  %>

  <%= select_tag 'q', options_for_select(User.all.collect{ |u| [u.username, u.id ] }),class:"form-control" %>
  <%= submit_tag("Generate code",class:"form-control") %>
<% end %>
