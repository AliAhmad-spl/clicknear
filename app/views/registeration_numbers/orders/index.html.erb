



<!DOCTYPE html>
<html>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body>

<div class="w3-container">
<div class="well">
        <p style="text-align:center;">Welcome <%= current_user.email %></p>
        <p style="text-align:center;"> You are our superhero and for today you have the following super tasks! </p>
    </div>
<% @shops.each do |shop| %>
        <li><a href="#"><%= shop.id %> :<%= shop.name %></a></li>
  <table class="w3-table-all">
    <thead>
      <tr class="w3-red">
        <th>Product Name</th>
        <th>Customer Name</th>
        <th>Phone Number</th>
        <th>Address</th>
      </tr>
    </thead>
    
    <tr>
        <% shop.products.each do |product| %>
      <td><%= product.name %></td>
    </tr>
    <tr>
        <% product.orders.each do |order| %>
      <td><%= order.first_name %></td>
    </tr>
    <tr>
      <td><%= order.mobile_number %></td>
    </tr>

    <tr>
      <td><%= order.delivery_address %></td>
    </tr>
  </table>
                   <% end %>
                 <% end %>
                 <% end %>
</div>

</body>
</html> 
